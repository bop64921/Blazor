<h3>ListadoPeliculas</h3>

@if (Peliculas == null)
{
    <p>Cargando...</p>
}

else if (Peliculas.Count == 0)
{
    <p>No hay registros para mostrar...</p>
}
else
{
    <input type="checkbox" @bind="showbuttons" />

    foreach (var pelicula in Peliculas)

    {
        <PeliculaIndividual Pelicula="pelicula" showbuttons="showbuttons" EliminarPelicula="EliminarPelicula"></PeliculaIndividual>
    }
}




@code {

    [Parameter] public List<Pelicula> Peliculas {get; set;}
    [Parameter] public RenderFragment ChildContent { get; set; }
    bool showbuttons = false;

    void EliminarPelicula(Pelicula pelicula)
    {
        Peliculas.Remove(pelicula);
        Console.WriteLine("Se ha borrado una pelicula");
    }

}
